{
    "files": ["src/main.ts"],
    "compilerOptions": {
        "target": "ES2019",
        "importHelpers": true,
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "jsx": "react",
        "allowJs": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "preserveWatchOutput": true
    }
}
